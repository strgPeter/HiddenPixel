<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.hiddenpixel.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Main Layout Split into Two Sections -->
    <HBox spacing="20.0">
        <!-- Left Panel for Image and Input -->
        <VBox spacing="20.0">
            <!-- Image Frame with Rectangle as Background -->
            <StackPane>
                <Rectangle fx:id="imageBackground" width="600.0" height="400.0" fill="lightgray"/>
                <ImageView fx:id="imageView" fitWidth="600.0" fitHeight="400.0" preserveRatio="true"/>
            </StackPane>

            <!-- Multi-line Text Input for Secret Message -->
            <TextArea fx:id="secretMessageField" prefWidth="600.0" prefHeight="150.0" wrapText="true"
                      promptText="for inputting secret message to be encoded">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </TextArea>
        </VBox>

        <!-- Right Panel for Controls and Output -->
        <VBox spacing="20.0" alignment="CENTER">
            <!-- Load and Save Image Buttons -->
            <HBox spacing="10.0">
                <Button fx:id="loadImageButton" text="load img" prefWidth="100.0" prefHeight="40.0"
                        onAction="#onLoadImageClick"/>
                <Button fx:id="saveImageButton" text="save img" prefWidth="100.0" prefHeight="40.0"
                        onAction="#onSaveImageClick"/>
            </HBox>

            <!-- Encode and Decode Buttons -->
            <HBox spacing="10.0">
                <Button fx:id="decodeButton" text="decode" prefWidth="100.0" prefHeight="40.0"
                        onAction="#onDecodeClick"/>
                <Button fx:id="encodeButton" text="encode" prefWidth="100.0" prefHeight="40.0"
                        onAction="#onEncodeClick"/>
            </HBox>

            <!-- RGB Toggle Buttons -->
            <HBox spacing="10.0">
                <ToggleButton fx:id="redToggle" text="r" prefWidth="60.0" prefHeight="30.0"/>
                <ToggleButton fx:id="greenToggle" text="g" prefWidth="60.0" prefHeight="30.0"/>
                <ToggleButton fx:id="blueToggle" text="b" prefWidth="60.0" prefHeight="30.0"/>
            </HBox>

            <!-- Text Output Field for Error Messages (3 lines tall) -->
            <TextArea fx:id="outputTextArea" prefWidth="200.0" prefHeight="60.0" editable="false"
                      wrapText="true">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </TextArea>
        </VBox>
    </HBox>
</VBox>